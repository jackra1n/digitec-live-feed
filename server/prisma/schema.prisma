generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model SocialShoppingItem {
  id                              Int           @id
  userName                        String
  cityName                        String?
  dateTime                        DateTime
  imageUrl                        String?
  brandName                       String?
  fullProductName                 String?
  displayPrice                    DisplayPrice?
  oAuthProviderName               String?
  targetUserName                  String?
  quote                           String?
  voteTypeId                      Int?
  productTypeName                 String?
  socialShoppingTransactionTypeId Int
  url                             String
  rating                          Int?
  searchString                    String?
}

model DisplayPrice {
  id                   Int                @id @default(autoincrement())
  socialShoppingItem   SocialShoppingItem @relation(fields: [socialShoppingItemId], references: [id])
  socialShoppingItemId Int                @unique
  amountInclusive      Decimal
  amountExclusive      Decimal
  currency             String
}
